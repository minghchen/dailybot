{
  "wechat": {
    "single_chat_prefix": ["bot", "@bot"],
    "single_chat_reply_prefix": "[Bot] ",
    "group_chat_prefix": ["@bot"],
    "group_chat_reply_prefix": "",
    "group_name_white_list": [],
    "nick_name_black_list": []
  },
  
  "openai": {
    "api_key": "YOUR_OPENAI_API_KEY",
    "model": "gpt-4o-mini",
    "temperature": 0.7,
    "max_tokens": 2000,
    "proxy": ""
  },
  
  "note_backend": "obsidian",
  
  "obsidian": {
    "vault_path": "/Users/username/Library/Mobile Documents/iCloud~md~obsidian/Documents/YourVault",
    "daily_notes_folder": "Daily Notes",
    "knowledge_base_folder": "Knowledge Base"
  },
  
  "google_docs": {
    "document_id": "YOUR_GOOGLE_DOC_ID",
    "credentials_file": "config/google_credentials.json",
    "categories": {
      "theory": "理论研究",
      "application": "应用案例",
      "technology": "技术进展",
      "industry": "产业动态",
      "others": "其他"
    }
  },
  
  "content_extraction": {
    "context_time_window": 60,
    "auto_extract_enabled": true,
    "extract_types": ["wechat_article", "bilibili_video", "arxiv_paper", "pdf", "web_link"],
    "silent_mode": true,
    "max_summary_length": 500
  },
  
  "rag": {
    "enabled": true,
    "embedding_model": "text-embedding-ada-002",
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "top_k": 5,
    "similarity_threshold": 0.7
  },
  
  "bilibili": {
    "summarizer_api": "",
    "cookies": ""
  },
  
  "system": {
    "log_level": "INFO",
    "message_queue_size": 100,
    "auto_save_interval": 300,
    "timezone": "Asia/Shanghai",
    "admin_list": [],
    "whitelist_file": "config/group_whitelist.json",
    "history_batch_size": 50,
    "history_process_delay": 0.5,
    "max_history_days": 30,
    "message_db_path": "data/messages.db",
    "message_retention_days": 30
  }
} 