{
  "channel_type": "mac_wechat",
  
  "js_wechaty": {
    "ws_url": "ws://localhost:8788",
    "single_chat_prefix": ["bot", "@bot"],
    "group_chat_prefix": ["@bot"],
    "group_name_white_list": [],
    "message_limit_per_minute": 20,
    "min_reply_delay": 2,
    "max_reply_delay": 5
  },
  
  "wcf": {
    "single_chat_prefix": ["bot", "@bot"],
    "group_chat_prefix": ["@bot"],
    "group_name_white_list": [],
    "group_at_sender": true
  },
  
  "mac_wechat": {
    "mode": "silent",
    "poll_interval": 60,
    "single_chat_prefix": ["bot", "@bot"],
    "group_chat_prefix": ["@bot"],
    "group_name_white_list": []
  },
  
  "openai": {
    "model": "gpt-4o-mini",
    "temperature": 0.7,
    "max_tokens": 2000,
    "conversation_max_tokens": 1000,
    "proxy": ""
  },
  
  "note_backend": "google_docs",
  
  "obsidian": {
    "vault_path": "/path/to/your/vault",
    "note_files": [
      {
        "name": "AI研究笔记",
        "folder": "AI",
        "filename": "AI研究笔记.md",
        "description": "人工智能相关的论文、技术和理论研究"
      },
      {
        "name": "机器人技术",
        "folder": "Robotics",
        "filename": "机器人技术.md", 
        "description": "机器人、具身智能、操作和控制相关内容"
      }
    ]
  },

  "proxy": {
    "https": "http://127.0.0.1:7890"
  },
  
  "google_docs": {
    "credentials_file": "config/google_credentials.json",
    "note_files": [
      {
        "name": "DaliyAI笔记本",
        "document_id": "1B6_K3CB0nH1obz2dfltVvwVVFOklKlUPhHHG0aNwLxw",
        "description": "人工智能相关的论文、技术和理论研究"
      }
    ]
  },
  
  "content_extraction": {
    "context_time_window": 60,
    "history_context_time_window": 300,
    "auto_extract_enabled": true,
    "extract_types": ["wechat_article", "bilibili_video", "arxiv_paper", "pdf", "web_link"],
    "silent_mode": true,
    "max_summary_length": 500
  },
  
  "rag": {
    "enabled": true,
    "embedding_model": "text-embedding-ada-002",
    "vector_store_path": "data/vector_store",
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "top_k": 5,
    "similarity_threshold": 0.7
  },
  
  "bilibili": {
    "summarizer_api": "",
    "cookies": ""
  },
  
  "system": {
    "log_level": "INFO",
    "message_queue_size": 100,
    "auto_save_interval": 300,
    "timezone": "Asia/Shanghai",
    "admin_list": [],
    "whitelist_file": "config/group_whitelist.json",
    "history_batch_size": 50,
    "history_process_delay": 0.5,
    "max_history_days": 30,
    "message_db_path": "data/messages.db",
    "message_retention_days": 30
  }
} 